<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#FFFFFF"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
>
    <ListView android:id="@+id/lv_SongList"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="4"
        android:background="@color/window_background_dark"></ListView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:background="#9c27b0"
                  android:orientation="vertical"
                  android:layout_weight="1.3">
        <TextView android:id="@+id/tv_SongName2"
            android:fontFamily="@font/josefinsans_bold"
                  android:layout_width="match_parent"
                  android:text="One Spring Day"
                  android:textSize="25dp"
                  android:textStyle="bold"
                  android:textColor="#FFFFFF"
                  android:gravity="center_vertical"
                  android:paddingLeft="20dp"
                  android:layout_height="0dp"
                  android:layout_weight="2"/>
        <TextView android:id="@+id/tv_SongArtist2"
            android:fontFamily="@font/josefinsans_bold"
                  android:layout_width="match_parent"
                  android:text="One Spring Day"
                  android:textSize="20dp"
                  android:textColor="#FFFFFF"
                  android:gravity="center_vertical"
                  android:paddingLeft="20dp"
                  android:layout_height="0dp"
                  android:layout_weight="1.5"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1">
            <TextView android:id="@+id/tv_Index"
                android:fontFamily="@font/josefinsans_bold"
                      android:layout_width="0dp"
                      android:text="1/15"
                      android:textSize="18dp"
                      android:textColor="#FFFFFF"
                      android:gravity="center_vertical"
                      android:paddingLeft="20dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>
            <TextView android:id="@+id/tv_SongTime2"
                android:fontFamily="@font/josefinsans_bold"
                      android:layout_width="0dp"
                      android:text="0:06/2:32"
                      android:textSize="18dp"
                      android:textColor="#FFFFFF"
                      android:gravity="center_vertical|right"
                      android:paddingRight="20dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>

        </LinearLayout>
        <SeekBar android:id="@+id/seekBar"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:background="#9c27b0"
                  android:orientation="horizontal"
                  android:layout_weight="0.4">
        <ImageView android:id="@+id/bt_Shuffle"
                   android:layout_width="0dp"
                   android:scaleType="centerInside"
                   android:src="@drawable/shuffledisabled"
                   android:layout_height="match_parent"
                   android:layout_weight="1"/>
        <ImageView android:id="@+id/bt_Previous"
                   android:layout_width="0dp"
                   android:scaleType="centerInside"
                   android:src="@drawable/skipprevious"
                   android:layout_height="match_parent"
                   android:layout_weight="1"/>
        <ImageView android:id="@+id/bt_StartPause"
                   android:layout_width="0dp"
                   android:scaleType="centerInside"
                   android:src="@drawable/play"
                   android:layout_height="match_parent"
                   android:layout_weight="1"/>
        <ImageView android:id="@+id/bt_Next"
                   android:layout_width="0dp"
                   android:scaleType="centerInside"
                   android:src="@drawable/skipnext"
                   android:layout_height="match_parent"
                   android:layout_weight="1"/>
        <ImageView android:id="@+id/bt_Repeat"
                   android:layout_width="0dp"
                   android:scaleType="centerInside"
                   android:src="@drawable/repeatoff"
                   android:layout_height="match_parent"
                   android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>

